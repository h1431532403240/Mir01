APP_NAME="庫存管理系統"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Taipei
APP_URL=https://api.lomis.com.tw

# 前端應用程式 URL（用於 CORS 設定）
FRONTEND_URL=https://los.lomis.com.tw

APP_LOCALE=zh_TW
APP_FALLBACK_LOCALE=zh_TW
APP_FAKER_LOCALE=zh_TW

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# 資料庫設定
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=inventory
DB_USERNAME=inventory_user
DB_PASSWORD=strong_password_here

# Redis 設定
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session 設定
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.lomis.com.tw

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_DATABASE_CONNECTION=null
CACHE_DATABASE_TABLE=cache
CACHE_PREFIX=

# Sanctum 設定
SANCTUM_STATEFUL_DOMAINS=los.lomis.com.tw

# 郵件設定（可選）
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS 設定（如果使用 S3）
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Scribe API 文檔設定
SCRIBE_TITLE="庫存管理系統 API"
SCRIBE_DESCRIPTION="庫存管理系統的 RESTful API 文檔"
SCRIBE_BASE_URL="${APP_URL}" 